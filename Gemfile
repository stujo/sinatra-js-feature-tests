# A sample Gemfile
source "https://rubygems.org"
ruby '2.1.2'

gem "sinatra"
gem "sinatra-contrib"

group :development, :test do
  gem 'shoulda-matchers'
  gem 'rack-test'
  gem 'rspec'
  gem 'capybara'
  # gem 'database_cleaner', git: 'https://github.com/bmabey/database_cleaner.git'
  gem 'rspec-html-matchers'
  gem 'simplecov'
  gem 'factory_girl'
  gem 'poltergeist'
end
